<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Mobilprog.ViewModels"
             xmlns:models="clr-namespace:Mobilprog.Models"
             x:DataType="viewmodels:ReceiptsListViewModel"
             x:Class="Mobilprog.Views.ReceiptsListPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Receipt" Command="{Binding AddReceiptCommand}" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding Receipts}" SelectionMode="Single" SelectionChangedCommand="{Binding GoToReceiptDetailsCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Receipt">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="{Binding StoreName}" FontAttributes="Bold" />
                        <Label Grid.Column="1" Text="{Binding TotalPrice, StringFormat='{0:C}'}" HorizontalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
