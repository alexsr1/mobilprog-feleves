<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mobilprog.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mobilprog.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Mobilprog">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Receipts"
        ContentTemplate="{DataTemplate local:ReceiptsListPage}"
        Route="ReceiptsListPage" />

    <ShellContent
        Title="Products"
        ContentTemplate="{DataTemplate local:ProductsListPage}"
        Route="ProductsListPage" />

</Shell>
